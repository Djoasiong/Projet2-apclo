{% extends 'layout.html.twig' %}

{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/style.css">
	<link rel="stylesheet" href="/assets/css/banner.css">
	<link rel="stylesheet" href="/assets/css/actuality.css">
{% endblock %}

{% block content %}
	<div class="banner"></div>
	<div class="title">
		<h1>Actualités</h1>
		<p class="entity-actuality mb-0">Retrouvez ci-dessous, les actualités de l'association, nos conseils et toutes nos astuces afin de vous tenir informés de notre activité et de vous aider à vous occuper de vos compagnons à quatre pattes."</p>
	</div>
	{% for actuality in actualities %}
		<div class="separator d-flex justify-content-center">
			<img src="assets/images/separator.svg" alt="separator cats paws">
		</div>
		<div class="card card-actuality mb-5 mx-auto">
			<div class="row g-0">
				<div class="col-md-4">
					<img src="uploads/{{ actuality.image }}" class="img-fluid img-actuality rounded-start" alt="image actualite {{ actuality.name }}">
				</div>
				<div class="col-md-8">
					<div class="card-body">
						<h3 class="card-title text-light fw-bold p-0 mt-3 fs-4">{{ actuality.title }}</h3>
						<p class="card-text mb-0 mt-4 fs-5">{{ actuality.description|nl2br }}
                        </p>
						<p class="date text-light d-flex justify-content-end fs-5 fw-bold p-4 mb-0">{{ actuality.date }}</p>
					</div>
				</div>
			</div>
		</div>
		{# <div class="d-flex mb-5">
			<div class="col-md-6 d-flex">
				<img src="uploads/{{ actuality.image }}" class="card-img-left card-actuality" alt="image actualite {{ actuality.name }}">
			</div>
			<div class="text description col-md-6">
				<div class="entity text-light fw-bold p-4 fs-3">{{ actuality.title }}</div>
				<p class="descrition-actuality mb-4 mt-4">{{ actuality.description|nl2br }}</p>
				<div class="date text-light d-flex justify-content-end fs-5 fw-bold p-4 mb-0">{{ actuality.date }}</div>
			</div>
		</div> #}
	{% endfor %}

{% endblock %}
