	{% endfor %}

	<div class="lg-5">
		<h2>Formulaire</h2>
	</div>

	<div class="">
		<p>Vos coordonnées :</p>
	</div>

	<form method="POST" action="thanks.php" class="rounded bg-danger">

		<div class="form-group">
			<div class="row">
				<input type="hidden" value="{{ new.id }}" name="id">
				<label class="col-sm-3 col-form-label " for="lastname">Nom :</label>
				<div class="col-sm-6">
					<input type="text" name="lastname" value="{{ new.lastname }}" class="form-control " placeholder="Dupont" id="lastname" required/>
				</div>
			</div>
		</div>

		<div class="form-group">
			<div class="row">
				<label class="col-sm-3 col-form-label" for="firstname">Prénom :</label>
				<div class="col-md-6">
					<input type="text" name="firstname" value="{{ new.firstname }}" class="form-control" placeholder="Eric" id="firstname" required/>
				</div>
			</div>
		</div>

		<div class="form-group">
			<div class="row ">
				<label class="col-sm-3 col-form-label" for="phone">Numéro de Téléphone :</label>
				<div class="col-md-6">
					<input type="tel" name="tel" value="{{ new.tel }}" class="form-control" placeholder="02 38 52 77 82" id="tel" required/>
				</div>
			</div>
		</div>

		<div class="form-group">
			<div class="row">

				<label class="col-sm-3 col-form-label" for="e-mail">Mail :</label>
				<div class="col-md-6">
					<input type="email" name="e-mail" value="{{ new.email }}" class="form-control" placeholder="eric.dupont@gmail.com" id="email" required/>
				</div>
			</div>
		</div>
	</form>

	<div class"form-group">

		<p>Votre message :</p>
	</div>
	<form method="POST" action="thanks.php" class="rounded bg-danger">


		<div class="form-group">
			<div class="row">
				<label class="col-sm-3 col-form-label" for="subject">Choisir le sujet de votre message :</label>
				<div class="col-md-6">

					<select name="subject" id="subject" class="form-control" required>
						<option value="une question">Une question</option>
						<option value="un renseignement">Un renseignement</option>
						<option value="une adoption">Une adoption</option>
						<option value="une visite">Une visite</option>
						<option value="un don">Un don</option>
					</select>
				</div>
			</div>
		</div>

		<div class="form-group">
			<div class="row">
				<label class="col-sm-3 col-form-label" for="comments">Message :</label>
				<div class="col-md-9">
					<textarea name="message" id="message" class="form-group" cols="25" rows="3" placeholder="Mon message ..." required></textarea>
					<button type="submit " class="btn btn-light">Envoyer</button>
				</div>
			</div>
		</div>
	</form>

	<div class="position-relative position-relative-example">
		<div class="position-absolute top-0 start-100 translate-middle">
			<div class="row">
				<h2>Nos coordonnées</h2>
