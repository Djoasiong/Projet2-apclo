<head>
	<link rel="stylesheet" href="/assets/css/form.css" type="text/css">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
	<div class="container">
		{% for error in errors %}
			<div>
				<p class="text-danger alert alert-danger">{{error}}</p>
			</div>
		{% endfor %}

		<div class="form_coordinates_title mt-4 align-center">
			<h2>Formulaire</h2>
		</div>


		<div class="form_coordinates_title">
			<p>Vos coordonnées :</p>

			<div class="form_box">
				<form method="POST">


					<div class="form-group">
						<label for="lastname" class="form-label">Nom :</label>
						<input type="text" id="lastname" class="form-control" name="lastname" placeholder="Dupont" required/>
					</div>


					<div class="form-group">
						<label for="firstname" class="form-label mt-3">Prénom :</label>
						<input type="text" id="firstname" class="form-control" name="firstname" placeholder="Eric" required/>
					</div>


					<div class="form-group">
						<label for="phone" class="form-label mt-3">Numéro de Téléphone :</label>
						<input type="tel" id="tel" class="form-control" type="tel" name="tel" placeholder="02 38 52 77 82" required/>
					</div>


					<div class="form-group">

						<label for="e-mail" class="form-label mt-3">Mail :</label>
						<input type="email" id="e-mail" class="form-control mb-3" name="e-mail" placeholder="eric.dupont@gmail.com" required/>
					</div>

				</div>

			</div>


			<div class="form-group_message">
				<div class="form_coordinates_title col mt-4">
					<p>Votre message :</p>
				</div>
				<div class="form_subject">

					<div class="card_02">

						<div form="form-group_subject">
							<label class="col-form mb-2" for="subject">Sujet :</label>
							<select id="subject" name="subject" class="form-control" required>
								<option value="une question">Une question</option>
								<option value="un renseignement">Un renseignement</option>
								<option value="une adoption">Une adoption</option>
								<option value="une visite">Une visite</option>
							</select>

							<label for="message" class="col-form">Message :</label>
							<textarea id="message" name="message" class="col-10 mt-1 pr-2 pl-2" placeholder="Insérer votre message :" required></textarea>
							<div class="button">
								<button type="submit" class="btn btn-light mt-4">Envoyer</button>
							</div>
						</div>
					</div>
				</div>
			</form>

		</div>
		<div class="container offset-7 ">
			<div class="form_coordinates_title mx-5">
				<h2>Nos coordonnées</h2>
			</div>
			<div class="apclo_coordinates mb-5">
				<p>APCLO - Association pour la Protection des Chats Libres d'Orléans</p>
				<p>44 Av. Roger Secrétain</p>
				<p>45100 Orléans</p>
				<p>06 72 56 18 41</p>
				<p>Email:</p>
			</div>
			<div class="row">
				<div class="col">
					<iframe width="425" height="350" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://www.openstreetmap.org/export/embed.html?bbox=1.8933203816413882%2C47.888859361234644%2C1.8971478939056399%2C47.89050146727297&amp;layer=mapnik" style="border: 1px solid black"></iframe><br/><small>
						<a href="https://www.openstreetmap.org/#map=19/47.88968/1.89523&amp;layers=N">Afficher une carte plus grande</a>
					</small>
				</div>
			</div>
		</div>
	</div>


</body></html>
