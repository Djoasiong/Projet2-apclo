<div class="container-sm justify-content-center d-flex mb-4 mt-5">

    <form method="post">  

        <div class="form-group mb-3 pt-3">
            <label  for="title" class="form-label">Titre :</label>
            <input type="text" class="form-control" id="title" value="{{ actuality.title }}" name="title" required>
        </div>
        <div class="form-group mb-3">
            <label  for="date" class="form-label">Date :</label>
            <input type="date" class="form-control" id="date" value="{{ actuality.date }}" name="date" required>
        </div>
        <div class="form-group mb-3">
            <label  for="description" class="form-label">Description :</label>
            <textarea  id="description" class="form-control" name="description" required></textarea>
        </div>
        <div class="d-flex justify-content-center m-5">
            <button class="btn btn-lg btn-succes button-actuality-form px-5">Ajouter</button>

    </form>
</div>
